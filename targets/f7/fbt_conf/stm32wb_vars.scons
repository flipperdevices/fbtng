from fbt_extra.util import find_variable_config

Import("ENV", "VARS")

VARS.AddVariables(
    (
        "COPRO_CUBE_VERSION",
        "Cube version",
        "1.20.0",  # Must match lib/stm32wb_copro version
    ),
    (
        "COPRO_STACK_ADDR",
        "Core2 Firmware address",
        "0x0",  # Leave as 0 to let scripts automatically calculate it
    ),
    (
        "COPRO_STACK_BIN",
        "Core2 Firmware file name",
        "stm32wb5x_BLE_Stack_light_fw.bin",
    ),
    (
        "COPRO_DISCLAIMER",
        "Value to pass to bundling script to confirm dangerous operations",
        "",
    ),
    PathVariable(
        "COPRO_OB_DATA",
        help="Path to OB reference data",
        validator=PathVariable.PathIsFile,
        default="scripts/ob.data",
    ),
    PathVariable(
        "COPRO_STACK_BIN_DIR",
        help="Path to ST-provided stacks",
        validator=PathVariable.PathIsDir,  # If you override COPRO_CUBE_DIR on commandline, override this as well
        default="${COPRO_CUBE_DIR}/firmware",
    ),
    PathVariable(
        "COPRO_CUBE_DIR",
        help="Path to Cube root",
        validator=PathVariable.PathIsDir,
        default="lib/stm32wb_copro",
    ),
    EnumVariable(
        "COPRO_STACK_TYPE",
        help="Core2 stack type",
        default="ble_light",  # Firmware also supports "ble_full", but it might not fit into debug builds
        allowed_values=[
            "ble_full",
            "ble_light",
            "ble_basic",
        ],
    ),
)

