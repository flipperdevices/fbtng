# Inject default values for this target into global variables

_fw_default_apps_config = {
    "default": [
        # Svc
        "basic_services",
        # Apps
        "main_apps",
        "system_apps",
        # Settings
        "settings_apps",
    ],
    "unit_tests": [
        "basic_services",
        "updater_app",
        "radio_device_cc1101_ext",
        "unit_tests",
    ],
}

fw_apps_configs_option = find_variable_config(VARS, "FIRMWARE_APPS")
assert isinstance(fw_apps_configs_option.default, dict)
for key, value in _fw_default_apps_config.items():
    fw_apps_configs_option.default[key] = value

fw_appdirs_option = find_variable_config(VARS, "APPDIRS")
assert isinstance(fw_appdirs_option.default, list)
fw_appdirs_option.default.extend(
    (
        ("applications/main", True),
        ("applications/settings", False),
        ("applications/system", False),
        ("applications/debug", False),
        ("applications/examples", False),
        ("applications/drivers", True),
    )
)
