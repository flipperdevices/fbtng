Import("env")
LIB_FOLDER = "canvas_u8g2"

env.Append(
    CPPPATH=[
        Dir(LIB_FOLDER).srcnode(),
    ],
    LINT_SOURCES=[
        Dir(LIB_FOLDER),
    ],
)


libenv = env.Clone(FW_LIB_NAME=LIB_FOLDER)
libenv.ApplyLibFlags()

sources = libenv.GlobRecursive("*.c", libenv.Dir(LIB_FOLDER))

lib = libenv.StaticLibrary("${FW_LIB_NAME}", sources)
libenv.Install("${LIB_DIST_DIR}", lib)
Return("lib")
